{
    "compilerOptions": {
        "paths": {
            "@src/*": [
                "./src/*"
            ]
        },
        "target": "es2021",
        "module": "commonjs",
        "lib": [
            "es6",
            "ES2021"
        ],
        "allowJs": true,
        "outDir": "build",
        "rootDir": "src",
        "strict": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "resolveJsonModule": true
    },
    "ts-node": {
        "require": [
            "tsconfig-paths/register"
        ]
    }
}