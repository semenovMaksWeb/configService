[
    {
        "name": "fileApi",
        "result": "=",
        "comment": "Чтения файла: Ответ с категориями",
        "action": "fileRead",
        "path": {
            "const": "./media/joom/dataset_in/categoriesApiResult.json",
            "convert": {
                "type": "string"
            }
        }
    },
    {
        "name": "jsonParsing",
        "comment": "Преобразование json для дальнейшего записание в БД",
        "action": "mappingJson",
        "result": "=",
        "mappingJson": {
            "schema": [
                {
                    "key": "categories",
                    "type": "array",
                    "init": true,
                    "root": [
                        "payload",
                        "children"
                    ],
                    "children": [
                        {
                            "key": "name",
                            "type": "item",
                            "init": false,
                            "path": [
                                "name"
                            ]
                        },
                        {
                            "key": "image",
                            "type": "item",
                            "init": false,
                            "path": [
                                "mainImage",
                                "images",
                                "0",
                                "url"
                            ]
                        }
                    ]
                }
            ],
            "json": {
                "store": "fileApi",
                "convert": {
                    "type": "json"
                }
            }
        }
    },
    {
        "name": "forJsonArray",
        "action": "for",
        "result": "=",
        "for": {
            "item": "categoriesItem",
            "array": {
                "store": ["jsonParsing", "categories"],
                "convert": null
            },
            "config": [
                {
                    "name": "fileName",
                    "comment": "Получить имя файла",
                    "action": "convertReplaceAll",
                    "result": "=",
                    "convertReplaceAll": {
                        "string": {
                            "store": [
                                "categoriesItem",
                                "image"
                            ]
                        },
                        "searchString": {
                            "const": "(https:\/\/resources.joomcdn.net\/)|(https:\/\/upload.joomcdn.net\/)|(\/)",
                            "convert": {
                                "type": "RegExp",
                                "regExpFlag": "gi"
                            }
                        },
                        "replaceString": {
                            "const": "",
                            "convert": null
                        }
                    }
                },
                {
                    "name": "dowloadFile",
                    "action": "downloadFileHttp",
                    "comment": "скачать и сохранить файл продукта на диск",
                    "downloadFileHttp": {
                        "path": {
                            "const": "./media/joom/dataset_out/img/categories/"
                        },
                        "url": {
                            "store": [
                                "categoriesItem",
                                "image"
                            ]
                        },
                        "fileName": {
                            "store": "fileName"
                        }
                    }
                },
                {
                    "name": [
                        "categoriesItem",
                        "image"
                    ],
                    "action": "initVar",
                    "result": "=",
                    "comment": "Сохранить путь к файлу",
                    "initVar": {
                        "store": "fileName",
                        "convert": null
                    }
                }
            ]
        }
    },
    {
        "name": "saveJsonFile",
        "comment": "Сохранить json в файл",
        "action": "fileWrite",
        "fileWrite": {
            "path": {
                "const": "./media/joom/dataset_out/categories.json",
                "convert": {
                    "type": "string"
                }
            },
            "data": {
                "store": [
                    "jsonParsing",
                    "categories"
                ],
                "convert": {
                    "type": "string"
                }
            }
        }
    }
]