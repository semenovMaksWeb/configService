[
    {
        "name": "productList",
        "action": "initVar",
        "result": "=",
        "comment": "Иницилизируем массив результат конвертации данных с html",
        "initVar": {
            "const": [],
            "convert": null
        }
    },
    {
        "name": "fileList",
        "action": "directoryFile",
        "result": "=",
        "comment": "Проверка всех файлов в директиве",
        "path": {
            "const": "./media/joom/dataset_in/product_html",
            "convert": null
        }
    },
    {
        "name": "forElementFile",
        "comment": "Прогнать в цикле файлы указанные в for.array",
        "action": "for",
        "result": "null",
        "for": {
            "item": "fileItem",
            "array": {
                "store": [
                    "fileList"
                ],
                "convert": null
            },
            "config": [
                {
                    "name": "fileApi",
                    "result": "=",
                    "comment": "Чтения файла из элемента цикла",
                    "action": "fileRead",
                    "path": {
                        "store": "fileItem",
                        "convert": null
                    }
                },
                {
                    "name": "htmlDom",
                    "action": "convertInDom",
                    "result": "=",
                    "comment": "Создание dom element из строки файла",
                    "convertInDom": {
                        "html": {
                            "store": "fileApi",
                            "convert": null
                        }
                    }
                },
                {
                    "name": "productDomList",
                    "action": "findElementHtmlAll",
                    "result": "=",
                    "comment": "Поиск всех продуктов из dom element-ов",
                    "findElementHtmlAll": {
                        "html": {
                            "store": "htmlDom",
                            "convert": null
                        },
                        "selector": {
                            "store": ".cell___ixESO",
                            "convert": null
                        }
                    }
                },
                {
                    "name": "forElementDom",
                    "comment": "Прогнать в цикле dom element продуктов указанные в for.array",
                    "action": "for",
                    "result": "null",
                    "for": {
                        "item": {
                            "store": "productDom",
                            "convert": null
                        },
                        "array": {
                            "store": "productDomList",
                            "convert": null
                        },
                        "config": [
                            {
                                "name": "productObject",
                                "comment": "Создать пустой объект в который будет записывать результат сохранения конвертации",
                                "action": "initVar",
                                "initVar": {
                                    "const": {},
                                    "convert": null
                                }
                            },
                            {
                                "name": [
                                    "productObject",
                                    "name"
                                ],
                                "action": "getInnerHtml",
                                "comment": "Сохранения имени продукта в объект",
                                "result": "=",
                                "getInnerHtml": {
                                    "html": {
                                        "store": "productDom",
                                        "convert": null
                                    },
                                    "selector": {
                                        "store": ".name___asFfu",
                                        "convert": null
                                    }
                                }
                            },
                            {
                                "name": [
                                    "productObject",
                                    "price"
                                ],
                                "comment": "Сохранения цены продукта в объект",
                                "action": "getInnerHtml",
                                "result": "=",
                                "getInnerHtml": {
                                    "html": {
                                        "store": "productDom",
                                        "convert": null
                                    },
                                    "selector": {
                                        "store": ".price___Vlu0y span:not(.hidden___pmcai)",
                                        "convert": null
                                    }
                                }
                            },
                            {
                                "name": [
                                    "productObject",
                                    "image"
                                ],
                                "comment": "Сохранения url изображения продукта в объект",
                                "action": "getAtrHtml",
                                "result": "=",
                                "getAtrHtml": {
                                    "html": {
                                        "store": "productDom",
                                        "convert": null
                                    },
                                    "nameArt": {
                                        "const": "src",
                                        "convert": null
                                    },
                                    "selector": {
                                        "store": ".price___Vlu0y span:not(.hidden___pmcai)",
                                        "convert": null
                                    }
                                }
                            },
                            {
                                "name": "productList",
                                "action": "initVar",
                                "comment": "Сохранения объекта в массив результата",
                                "result": "push",
                                "initVar": {
                                    "store": "productObject",
                                    "convert": null
                                }
                            }
                        ]
                    }
                }
            ]
        }
    }
]