[
    {
        "name": "productList",
        "action": "initVar",
        "result": "=",
        "comment": "Иницилизируем массив результат конвертации данных с html",
        "initVar": {
            "const": [],
            "convert": null
        }
    },
    {
        "name": "fileList",
        "action": "directoryFile",
        "result": "=",
        "comment": "Проверка всех файлов в директиве",
        "path": {
            "const": "./media/joom/dataset_in/product_html",
            "convert": null
        }
    },
    {
        "name": "fuctionConnectionDB",
        "action": "fileConfig",
        "path": "/connection/postgressql.json",
        "result": "=",
        "comment": "Подключение к бд"
    },
    {
        "name": "forElementFile",
        "comment": "Прогнать в цикле файлы указанные в for.array",
        "action": "for",
        "result": "=",
        "for": {
            "item": "fileItem",
            "array": {
                "store": "fileList",
                "convert": null
            },
            "config": [
                {
                    "name": "fileApi",
                    "result": "=",
                    "comment": "Чтения файла из элемента цикла",
                    "action": "fileRead",
                    "path": {
                        "store": "fileItem",
                        "convert": null
                    }
                },
                {
                    "name": "htmlDom",
                    "action": "convertInDom",
                    "result": "=",
                    "comment": "Создание dom element из строки файла",
                    "convertInDom": {
                        "html": {
                            "store": "fileApi",
                            "convert": null
                        }
                    }
                },
                {
                    "name": "categoriesProductFromFile",
                    "action": "getInnerHtml",
                    "comment": "сохранение в переменную категории из html",
                    "result": "=",
                    "getInnerHtml": {
                        "html": {
                            "store": "htmlDom",
                            "convert": null
                        },
                        "selector": {
                            "const": ".header___brtVq",
                            "convert": null
                        }
                    }
                },
                {
                    "name": "categoriesProductId",
                    "action": "sql",
                    "result": "=",
                    "comment": "Вызов sql функции получение категории",
                    "sql": {
                        "type": {
                            "env": "BD_MAIN_TYPE",
                            "convert": {
                                "type": "string"
                            }
                        },
                        "connection": {
                            "store": "connectionMain",
                            "convert": null
                        },
                        "query": "SELECT id from joom.categories c where c.name = $1",
                        "params": [
                            {
                                "store": "categoriesProductFromFile"
                            }
                        ]
                    }
                },
                {
                    "name": "productDomList",
                    "action": "findElementHtmlAll",
                    "result": "=",
                    "comment": "Поиск всех продуктов из dom element-ов",
                    "findElementHtmlAll": {
                        "html": {
                            "store": "htmlDom",
                            "convert": null
                        },
                        "selector": {
                            "const": ".cell___ixESO",
                            "convert": null
                        }
                    }
                },
                {
                    "name": "forElementDom",
                    "comment": "Прогнать в цикле dom element продуктов указанные в for.array",
                    "action": "for",
                    "result": "=",
                    "for": {
                        "item": "productDom",
                        "array": {
                            "store": "productDomList",
                            "convert": null
                        },
                        "config": [
                            {
                                "name": "productObject",
                                "result": "=",
                                "comment": "Создать пустой объект в который будет записывать результат сохранения конвертации",
                                "action": "initVar",
                                "initVar": {
                                    "const": {},
                                    "convert": null
                                }
                            },
                            {
                                "name": [
                                    "productObject",
                                    "name"
                                ],
                                "action": "getInnerHtml",
                                "comment": "Сохранения имени продукта в объект",
                                "result": "=",
                                "getInnerHtml": {
                                    "html": {
                                        "store": "productDom",
                                        "convert": null
                                    },
                                    "selector": {
                                        "const": ".name___asFfu",
                                        "convert": null
                                    }
                                }
                            },
                            {
                                "name": [
                                    "productObject",
                                    "name"
                                ],
                                "result": "=",
                                "action": "convertValidString",
                                "comment": "Убрать лишние пробелы и переносы",
                                "convertValidString": {
                                    "string": {
                                        "store": [
                                            "productObject",
                                            "name"
                                        ],
                                        "convert": null
                                    }
                                }
                            },
                            {
                                "name": [
                                    "productObject",
                                    "price"
                                ],
                                "comment": "Сохранения цены продукта в объект",
                                "action": "getInnerHtml",
                                "result": "=",
                                "getInnerHtml": {
                                    "html": {
                                        "store": "productDom",
                                        "convert": null
                                    },
                                    "selector": {
                                        "const": ".price___Vlu0y span:not(.hidden___pmcai)",
                                        "convert": null
                                    }
                                }
                            },
                            {
                                "name": [
                                    "productObject",
                                    "price"
                                ],
                                "action": "convertReplaceAll",
                                "result": "=",
                                "comment": "Убрать лишние символы с цены",
                                "convertReplaceAll": {
                                    "string": {
                                        "store": [
                                            "productObject",
                                            "price"
                                        ]
                                    },
                                    "searchString": {
                                        "const": "(&nbsp)|(;)|(₽)",
                                        "convert": {
                                            "type": "RegExp",
                                            "regExpFlag": "gi"
                                        }
                                    },
                                    "replaceString": {
                                        "const": ""
                                    }
                                }
                            },
                            {
                                "name": [
                                    "productObject",
                                    "idCategories"
                                ],
                                "action": "initVar",
                                "result": "=",
                                "comment": "Сохранить idCategories в продукт",
                                "initVar": {
                                    "store": [
                                        "categoriesProductId",
                                        0,
                                        "id"
                                    ],
                                    "convert": null
                                }
                            },
                            {
                                "name": [
                                    "productObject",
                                    "price"
                                ],
                                "action": "initVar",
                                "result": "=",
                                "comment": "из строки в число",
                                "initVar": {
                                    "store": [
                                        "productObject",
                                        "price"
                                    ],
                                    "convert": {
                                        "type": "number"
                                    }
                                }
                            },
                            {
                                "name": "imageUrl",
                                "comment": "Сохранения url изображения продукта в объект",
                                "action": "getAtrHtml",
                                "result": "=",
                                "getAtrHtml": {
                                    "html": {
                                        "store": "productDom",
                                        "convert": null
                                    },
                                    "nameArt": {
                                        "const": "src",
                                        "convert": null
                                    },
                                    "selector": {
                                        "const": ".image___ZMfjN.image___sRDi6.contain___AWtW_.multiply___SN11z",
                                        "convert": null
                                    }
                                }
                            },
                            {
                                "name": [
                                    "productObject",
                                    "image"
                                ],
                                "comment": "Получить имя файла",
                                "action": "convertReplaceAll",
                                "result": "=",
                                "convertReplaceAll": {
                                    "string": {
                                        "store": "imageUrl"
                                    },
                                    "searchString": {
                                        "const": "https://img.joomcdn.net/"
                                    },
                                    "replaceString": {
                                        "const": ""
                                    }
                                }
                            },
                            {
                                "name": "fuctionDowloadFile",
                                "action": "fileConfig",
                                "path": "/joom/product/dowloadFile.json",
                                "result": "=",
                                "comment": "Скачивания файлов"
                            },
                            {
                                "name": "productList",
                                "copyResult": true,
                                "action": "initVar",
                                "comment": "Сохранения объекта в массив результата",
                                "result": "push",
                                "initVar": {
                                    "store": "productObject",
                                    "convert": "object"
                                }
                            }
                        ]
                    }
                }
            ]
        }
    },
    {
        "name": "saveJsonFile",
        "comment": "Сохранить json в файл",
        "action": "fileWrite",
        "fileWrite": {
            "path": {
                "const": "./media/joom/dataset_out/product.json",
                "convert": {
                    "type": "string"
                }
            },
            "data": {
                "store": "productList",
                "convert": {
                    "type": "string"
                }
            }
        }
    }
]