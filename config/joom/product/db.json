[
    {
        "name": "fileProduct",
        "result": "=",
        "comment": "Чтения файла: Ответ с товарами",
        "action": "fileRead",
        "path": {
            "const": "./media/joom/dataset_out/product.json",
            "convert": {
                "type": null
            }
        }
    },
    {
        "name": "fileProduct",
        "action": "initVar",
        "result": "=",
        "comment": "Сохранить путь к файлу",
        "initVar": {
            "store": "fileProduct",
            "convert": {
                "type": "json"
            }
        }
    },
    {
        "name": "nameList",
        "result": "=",
        "comment": "Массив названии",
        "action": "convertListInKeyArray",
        "convertListInKeyArray": {
            "key": {
                "const": "name"
            },
            "list": {
                "store": "fileProduct"
            }
        }
    },
    {
        "name": "priceList",
        "result": "=",
        "comment": "Массив названии",
        "action": "convertListInKeyArray",
        "convertListInKeyArray": {
            "key": {
                "const": "price"
            },
            "list": {
                "store": "fileProduct"
            }
        }
    },
    {
        "name": "idCategoriesList",
        "result": "=",
        "comment": "Массив названии",
        "action": "convertListInKeyArray",
        "convertListInKeyArray": {
            "key": {
                "const": "idCategories"
            },
            "list": {
                "store": "fileProduct"
            }
        }
    },
    {
        "name": "imageList",
        "result": "=",
        "comment": "Массив названии",
        "action": "convertListInKeyArray",
        "convertListInKeyArray": {
            "key": {
                "const": "image"
            },
            "list": {
                "store": "fileProduct"
            }
        }
    },
    {
        "name": "fuctionConnectionDB",
        "action": "fileConfig",
        "path": "/connection/postgressql.json",
        "result": "=",
        "comment": "Подключение к бд"
    },
    {
        "name": "sqlResultMysql",
        "action": "sql",
        "result": "=",
        "comment": "Вызов sql функции",
        "sql": {
            "type": {
                "env": "BD_MAIN_TYPE",
                "convert": {
                    "type": "string"
                }
            },
            "connection": {
                "store": "connectionMain",
                "convert": null
            },
            "query": "INSERT INTO joom.product (name, price, ulr_image, id_categories) (SELECT * FROM UNNEST($1::varchar[], $2::int[], $3::varchar[], $4::int[]))",
            "params": [
                {
                    "store": "nameList"
                },
                {
                    "store": "priceList"
                },
                {
                    "store": "imageList"
                },
                {
                    "store": "idCategoriesList"
                }
            ]
        }
    }
]